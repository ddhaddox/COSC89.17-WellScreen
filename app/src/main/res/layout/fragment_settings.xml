<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/android:colorBackground">

        <!-- Card for Settings Buttons -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/android:colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:weightSum="6"
                android:background="?attr/android:colorBackground">

                <!-- Manage Permissions Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManagePermissions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Manage Permissions"
                    android:padding="16dp"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/baseline_security_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginVertical="16dp"
                    style="@style/Button.Wellscreen"
                    android:contentDescription="Manage app permissions settings" />

                <!-- Manage Notifications Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManageNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Manage Notifications"
                    android:padding="16dp"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_notifications_black_24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:cornerRadius="8dp"
                    android:layout_marginVertical="16dp"
                    style="@style/Button.Wellscreen"
                    android:contentDescription="Manage notification settings" />

                <!-- Data Policy Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDataPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Data Policy"
                    android:padding="16dp"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/baseline_policy_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginVertical="16dp"
                    style="@style/Button.Wellscreen"
                    android:contentDescription="View the data policy" />

                <!-- Manage Data Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManageData"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Manage Data"
                    android:padding="16dp"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/baseline_storage_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginVertical="16dp"
                    style="@style/Button.Wellscreen"
                    android:contentDescription="Manage your data settings" />

                <!-- Generate Synthetic Data Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGenerateSyntheticData"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Generate Synthetic Data"
                    android:padding="16dp"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/baseline_storage_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginVertical="16dp"
                    android:visibility="gone"
                    style="@style/Button.Wellscreen"
                    android:contentDescription="Generate synthetic testing data" />

                <!-- Add Custom Data Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddCustomData"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Add Custom Data"
                    android:padding="16dp"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/baseline_add_chart_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginVertical="16dp"
                    style="@style/Button.Wellscreen"
                    android:contentDescription="Add custom data entries" />

                <!-- Export Data Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportData"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Export Data"
                    android:padding="16dp"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/baseline_download_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginVertical="16dp"
                    style="@style/Button.Wellscreen"
                    android:contentDescription="Export your data" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>