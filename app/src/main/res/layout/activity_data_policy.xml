<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar with Up Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/ToolbarStyle"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/data_policy_intro_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Line under Toolbar -->
    <View
        android:id="@+id/lineUnderToolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView for Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lineUnderToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Content Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Introduction Content -->
            <TextView
                android:id="@+id/tvIntroContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_intro_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp" />

            <!-- Data We Collect Section -->
            <TextView
                android:id="@+id/tvDataWeCollectHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_data_we_collect_header"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDataWeCollectContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_data_we_collect_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp" />

            <!-- How We Store Your Data Section -->
            <TextView
                android:id="@+id/tvHowWeStoreHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_how_we_store_your_data_header"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvHowWeStoreContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_how_we_store_your_data_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp" />

            <!-- How We Use Your Data Section -->
            <TextView
                android:id="@+id/tvHowWeUseHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_how_we_use_your_data_header"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvHowWeUseContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_how_we_use_your_data_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp" />

            <!-- Data Retention Section -->
            <TextView
                android:id="@+id/tvDataRetentionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_data_retention_header"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDataRetentionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_data_retention_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp" />

            <!-- Permissions We Require Section -->
            <TextView
                android:id="@+id/tvPermissionsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_permissions_we_require_header"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvPermissionsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_permissions_we_require_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp" />

            <!-- User Control Section -->
            <TextView
                android:id="@+id/tvUserControlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_user_control_header"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvUserControlContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_policy_user_control_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
