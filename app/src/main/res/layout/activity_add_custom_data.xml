<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar with Up Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        style="@style/ToolbarStyle"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Add Custom Data"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView for Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Content Layout -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Daily App Usage Section -->
            <TextView
                android:id="@+id/tvDailyAppUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily App Usage"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAppUsagePackageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAppUsagePackageName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Package Name"
                        android:inputType="text"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAppUsageDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAppUsageDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usage Duration"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAppUsageHours"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAppUsageHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hours"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAppUsageMinutes"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAppUsageMinutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Minutes"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAppUsageSeconds"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAppUsageSeconds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seconds"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAppUsageCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAppUsageCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Category Name"
                        android:inputType="text"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddAppUsage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Daily App Usage"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:backgroundTint="#000000"/>
            </LinearLayout>

            <!-- Daily Category Usage Section -->
            <TextView
                android:id="@+id/tvDailyCategoryUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Category Usage"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCategoryUsageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCategoryUsageName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Category Name"
                        android:inputType="text"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCategoryUsageDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCategoryUsageDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usage Duration"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCategoryUsageHours"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCategoryUsageHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hours"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCategoryUsageMinutes"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCategoryUsageMinutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Minutes"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCategoryUsageSeconds"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCategoryUsageSeconds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seconds"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddCategoryUsage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Category Usage"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:backgroundTint="#000000"/>

            </LinearLayout>

            <!-- Daily Screen Time Section -->
            <TextView
                android:id="@+id/tvDailyScreenTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Screen Time"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilScreenTimeDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etScreenTimeDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilScreenTimeHours"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etScreenTimeHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hours"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilScreenTimeMinutes"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etScreenTimeMinutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Minutes"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilScreenTimeSeconds"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etScreenTimeSeconds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seconds"
                            android:inputType="number"
                            android:maxLength="2"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddScreenTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Daily Screen Time"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:backgroundTint="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Date Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMPHQ9Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMPHQ9Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Time Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMPHQ9Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMPHQ9Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Time"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <!-- Questions Q1 to Q9 -->
                <!-- You can loop or duplicate these blocks for each question -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 1 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Repeat TextInputLayout for Q2 to Q9 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 2 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 3 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 4 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 5 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 6 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 7 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 8 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQ9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQ9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Question 9 Score"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddMPHQ9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add MPHQ9 Assessment"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:backgroundTint="#000000"/>
            </LinearLayout>

            <!-- Screen Events Section -->
            <TextView
                android:id="@+id/tvScreenEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Screen Events"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilScreenEventDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etScreenEventDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilScreenEventTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etScreenEventTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Time"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilScreenEventType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etScreenEventType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Event Type (on/off)"
                        android:inputType="text"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddScreenEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Screen Event"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:backgroundTint="#000000"/>
            </LinearLayout>

            <!-- Generate Screen Events Section -->
            <TextView
                android:id="@+id/tvGenerateScreenEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Screen Events"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="12dp"
                android:elevation="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilGenerateScreenEventDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGenerateScreenEventDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNumberOfEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNumberOfEvents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number of Events to Generate"
                        android:inputType="number"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGenerateScreenEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate Screen Events"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:backgroundTint="#000000"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>